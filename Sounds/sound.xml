 <reheat-ignite>
  <name>Reheat Ignite</name>
  <mode>once</mode>
  <path>Aircraft/Tornado/Sounds/Samples/reheat-ignite.wav</path>
  <condition>
   <property>/engines/engine/afterburner</property>
  </condition>
  <volume>
   <internal>0.15</internal>
  </volume>
  </reheat-ignite>
 
 <birds>
  <name>Birdsong</name>
  <mode>looped</mode>
  <path>Aircraft/Tornado/Sounds/Samples/birdsong.wav</path>
  <condition>
   <property>/sim/wildlife/birdsong</property>
   <less-than>
    <property>/position/altitude-agl-ft</property>
	<value>50</value>
   </less-than>
   <less-than>
    <property>/engines/engine[0]/rpm</property>
	<value>20</value>
   </less-than>
   <less-than>
    <property>/engines/engine[1]/rpm</property>
	<value>20</value>
   </less-than>
   <not>
	<property>/sim/current-view/internal</property>
   </not>
  </condition>
  <volume>
   <property>/sim/wildlife/birdsong-volume</property>
   <factor>1.0</factor>
  </volume>
 </birds>
 
