	<value>20</value>
   </less-than>
  </condition>
  <volume>
   	<property>/controls/canopy/position-norm</property>
   	<factor>5.0</factor>
	<min>0.0</min>
	<max>1.0</max>
   </volume>
  <volume>
   <property>/sim/wildlife/birdsong-volume</property>
   <factor>1.0</factor>
  </volume>
 </birds-internal>
  
 <!-- ==## Voice Warnings ##== -->
 
 <!-- ## Category 4 Warnings ## --> 
 
 <voice-lowheight>
  <name>voice-lowheight</name>
  <path>/Aircraft/Tornado/Sounds/Voice/lowheight.wav</path>
  <type>avionics</type>
  <mode>once</mode>
  <condition>
   <less-than>
    <property>/position/altitude-agl-ft</property>
	<value>700</value>
   </less-than>
  </condition>
  <volume>
   <property>/systems/CAMU/voice-alerts/volume</property>
   <factor>0.5</factor>
  </volume>
 </voice-lowheight>
 
 <voice-frequency>
  <name>voice-frequency</name>
  <path>/Aircraft/Tornado/Sounds/Voice/frequency.wav</path>
  <type>avionics</type>
  <mode>once</mode>
  <condition>
   <equals>
	<property>/systems/CAMU/radio[0]/selected-channel-n</property>
	<property>/systems/CAMU/radio[1]/selected-channel-n</property>
   </equals>
  </condition>
  <volume>
   <property>/systems/CAMU/voice-alerts/volume</property>
   <factor>0.5</factor>
  </volume>
 </voice-frequency>
 
 <voice-wingtanks>
  <name>voice-wingtanks</name>
  <path>/Aircraft/Tornado/Sounds/Voice/wingtanks.wav</path>
  <type>avionics</type>
  <mode>once</mode>
  <condition>
   <or>
    <equals>
	 <property>/sim/weight[2]/selected</property>
	 <value>1500 | Droptank</value>
	</equals>
	<equals>
	 <property>/sim/weight[2]/selected</property>
	 <value>1000 | Droptank</value>
	</equals>
   </or>
    <or>
    <equals>
	 <property>/sim/weight[6]/selected</property>
	 <value>1500 | Droptank</value>
	</equals>
	<equals>
	 <property>/sim/weight[6]/selected</property>
	 <value>1000 | Droptank</value>
	</equals>
   </or>
   <equals> 
	<property>/consumables/fuel/tank[6]/empty</property>
	<value>true</value>
   </equals>
   <equals>
    <property>/consumables/fuel/tank[7]/empty</property>
	<value>true</value>
   </equals>
  </condition>
  <volume>
   <property>/systems/CAMU/voice-alerts/volume</property>
   <factor>0.5</factor>
  </volume>
 </voice-wingtanks>
 
 <voice-centretank>
