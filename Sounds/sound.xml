 <!-- Engines-->
 
 <engine1-fan-1>
  <name>Intake Fan 1</name>
  <mode>looped</mode>
  <path>Aircraft/Tornado/Sounds/Samples/engine-intake.wav</path>
  <condition>
     <not>
         <property>/sim/current-view/internal</property>
     </not>
   </condition>
   <position>
    <x>5.5</x>
	<y>0.5</y>
	<z>0.0</z>
   </position>
   <orientation>
	<x>-90.0</x>
    	<y>0</y>
    	<z>0</z>
    	<inner-angle>110.0</inner-angle>
    	<outer-angle>180.0</outer-angle>
    	<outer-gain>0.4</outer-gain>
   </orientation>
   <volume>
    	<property>engines/engine[0]/rpm</property>
    	<factor>0.011</factor>
		<offset>-0.15</offset>
	<min>0.0</min>
	<max>1.0</max>
   </volume>
   <pitch>
    	<property>engines/engine[0]/rpm</property>
	<factor>0.012</factor>
	<min>0.0</min>
	<max>5.2</max>
   </pitch>
  </engine1-fan-1>
  
